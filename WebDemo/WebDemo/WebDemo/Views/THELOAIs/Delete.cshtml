@model WebDemo.Models.THELOAI

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="admin general">XÓA THỂ LOẠI</div>
<h3 style="text-align:center;margin-left:140px;">Bạn có chắn chắn muốn xóa ?</h3>
<div class="form-horizontal">
    @using (Html.BeginForm())
    {
        <h4>Thể loại</h4>
        <dl class="dl-horizontal">
            <dt>
                Tên Thể Loại
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TenTL)
            </dd>

        </dl>
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn-small btn-default" /> 
            <div class="btn-small"> @Html.ActionLink("Trở về", "Index")</div>
           
        </div>
    }
</div>
