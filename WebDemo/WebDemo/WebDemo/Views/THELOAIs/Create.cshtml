@model WebDemo.Models.THELOAI
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="admin general"style="margin-left:165px;">TẠO MỚI THỂ LOẠI</div>
<h2 style="color: red; text-align: center; padding: 50px 0px 0px 185px">@ViewBag.ThongBao</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            Tên Thể Loại
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenTL, new
                {
                    htmlAttributes = new
               { @class = "form-control" }
                })
                @Html.ValidationMessageFor(model => model.TenTL, "", new
                {
                    @class
               = "text-danger"
                })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10 mb-3 mt-3">
                <input type="submit" value="Tạo mới" class="btn-small btn-primary" />
            </div>
            <div class="btn-small">
                @Html.ActionLink("Trở lại", "Index")
            </div>
        </div>
    </div>
}



