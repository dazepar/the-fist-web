@model WebDemo.Models.THELOAI
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="admin general">CHỈNH SỬA THỂ LOẠI</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>THỂ LOẠI</h4>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaTL)

        <div class="form-group">
            Tên Thể Loại
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenTL, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenTL, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn-small btn-default" />
            </div>
            <div class="btn-small">
                @Html.ActionLink("Trở lại", "Index")
            </div>
        </div>
    </div>
}


